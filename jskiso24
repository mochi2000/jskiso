  <body>
    <div class="frame">
      <h1 class="frame__title">Javascript</h1>
      <div class="frame__inner">
        <script>
          const zip_pattern = /^\d{3}-?\d{4}$/g;
           let zip = prompt('郵便番号をxxx-xxxxの書式で入力してください')
           if (zip_pattern.test(zip) === true) {
              document.write('正しく入力されました');
           } else {
             document.write('郵便番号はxxx-xxxxの書式で正しく入力してください');
           }
        </script>
      </div>
    </div>
  </body>
