  <body>
    <div class="frame">
      <h1 class="frame__title">Javascript</h1>
      <div class="frame__inner">
        <script>
          const getTax = (price, tax=10) => {
            return Math.round(price * (tax / 100));
          }

          let m = parseInt(prompt('金額を入力'));
          let s = parseInt(prompt('税率を入力'));

          let tax = getTax(m,s);
          document.write(tax)
        </script>
      </div>
    </div>
  </body>
</html>
