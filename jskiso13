  <body>
    <div class="frame">
      <h1 class="frame__title">Javascript</h1>
      <div class="frame__inner">
        <script>
         const price = parseInt(prompt('商品の金額を入力してください'));
         const tax = 10;

          if(Number.isFinite(price)) {
          let tax_price = Math.round(price * (tax / 100));
          document.write(tax_price);
          } else {
            alert('数字を入力してください');
          }
        </script>
      </div>
    </div>
  </body>
